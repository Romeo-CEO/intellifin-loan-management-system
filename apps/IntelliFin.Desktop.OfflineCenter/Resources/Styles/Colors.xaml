<?xml version="1.0" encoding="UTF-8" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- IntelliFin Brand Colors -->
    <Color x:Key="Primary">#1E3A8A</Color>
    <Color x:Key="Secondary">#3B82F6</Color>
    <Color x:Key="Tertiary">#EFF6FF</Color>
    <Color x:Key="Success">#10B981</Color>
    <Color x:Key="Warning">#F59E0B</Color>
    <Color x:Key="Danger">#EF4444</Color>
    <Color x:Key="Light">#F8FAFC</Color>
    <Color x:Key="Dark">#1E293B</Color>
    
    <!-- Text Colors -->
    <Color x:Key="TextPrimary">#1E293B</Color>
    <Color x:Key="TextSecondary">#64748B</Color>
    <Color x:Key="TextMuted">#94A3B8</Color>
    
    <!-- Background Colors -->
    <Color x:Key="BackgroundPrimary">#FFFFFF</Color>
    <Color x:Key="BackgroundSecondary">#F8FAFC</Color>
    <Color x:Key="BackgroundTertiary">#F1F5F9</Color>

</ResourceDictionary>
