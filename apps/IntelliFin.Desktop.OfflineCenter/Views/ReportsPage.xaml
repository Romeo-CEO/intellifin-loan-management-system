<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="IntelliFin.Desktop.OfflineCenter.Views.ReportsPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Reports">

    <ScrollView Padding="20">
        <StackLayout Spacing="20">
            <Label Text="Reports & Analytics" 
                   FontSize="24" 
                   FontAttributes="Bold" 
                   TextColor="{StaticResource Primary}" />
            
            <Frame BackgroundColor="White" Padding="20" CornerRadius="10">
                <Label Text="Reporting and analytics features will be implemented here. This includes BoZ reports, trial balance, collections reports, and custom analytics." 
                       FontSize="14" 
                       TextColor="{StaticResource TextSecondary}" />
            </Frame>
        </StackLayout>
    </ScrollView>

</ContentPage>
