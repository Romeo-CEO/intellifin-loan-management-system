<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="IntelliFin.Desktop.OfflineCenter.Views.LoansPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Loan Portfolio">

    <ScrollView Padding="20">
        <StackLayout Spacing="20">
            <Label Text="Loan Portfolio Management" 
                   FontSize="24" 
                   FontAttributes="Bold" 
                   TextColor="{StaticResource Primary}" />
            
            <Frame BackgroundColor="White" Padding="20" CornerRadius="10">
                <Label Text="Loan portfolio management features will be implemented here. This includes loan applications, approvals, disbursements, and portfolio monitoring." 
                       FontSize="14" 
                       TextColor="{StaticResource TextSecondary}" />
            </Frame>
        </StackLayout>
    </ScrollView>

</ContentPage>
