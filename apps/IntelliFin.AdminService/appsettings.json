{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "Database": {
    "ApplyMigrations": true
  },
  "ConnectionStrings": {
    "Default": "Server=sql.intellifin.local;Database=IntelliFin_AdminService;TrustServerCertificate=True;Encrypt=False",
    "FinancialService": "Server=sql.intellifin.local;Database=IntelliFin_FinancialService;TrustServerCertificate=True;Encrypt=False",
    "IdentityDb": "Server=sql.intellifin.local;Database=IntelliFin_Identity;TrustServerCertificate=True;Encrypt=False"
  },
  "Keycloak": {
    "BaseUrl": "https://keycloak.intellifin.local/",
    "Realm": "IntelliFin",
    "ClientId": "admin-service",
    "ClientSecret": ""
  },
  "ServiceName": "IntelliFin.AdminService",
  "ServiceVersion": "1.0.0",
  "Environment": "Development",
  "OpenTelemetry": {
    "OtlpEndpoint": "http://otel-collector:4317",
    "Logs": {
      "OtlpEndpoint": "http://otel-collector:4317",
      "Headers": {
        "X-Scope-OrgID": ""
      },
      "SensitiveKeys": [
        "nrc",
        "nrcNumber",
        "nationalRegistration",
        "phone",
        "phoneNumber"
      ],
      "RedactionPatterns": []
    }
  },
  "AuditIngestion": {
    "BatchSize": 1000,
    "MaxBufferSize": 100000,
    "FlushIntervalSeconds": 5,
    "EnableRabbitMqConsumer": true
  },
  "AuditRabbitMq": {
    "HostName": "rabbitmq",
    "Port": 5672,
    "UserName": "",
    "Password": "",
    "VirtualHost": "/",
    "Exchange": "audit.events",
    "QueueName": "admin-service.audit.events",
    "DeadLetterQueue": "admin-service.audit.events.dlq",
    "Enabled": true
  },
  "AuditArchive": {
    "BucketName": "audit-logs",
    "AccessLogBucketName": "audit-access-logs",
    "RetentionDays": 3654,
    "ExportHourUtc": 0,
    "ExportMinuteUtc": 5,
    "CleanupRetentionDays": 90,
    "MetadataRetentionGraceDays": 1,
    "ReplicationCheckIntervalMinutes": 30
  },
  "Minio": {
    "Endpoint": "minio:9000",
    "UseSsl": false,
    "AccessKey": "",
    "SecretKey": "",
    "Region": "",
    "PresignedUrlExpirySeconds": 3600
  },
  "AuditChain": {
    "VerificationIntervalHours": 24
  },
  "Elevation": {
    "MaxDurationMinutes": 480,
    "MinJustificationLength": 20,
    "ApprovalTimeoutHours": 24,
    "ExpirationCheckIntervalMinutes": 5,
    "NotifyUserOnExpiration": true
  },
  "Camunda": {
    "BaseUrl": "https://camunda.intellifin.local/api/",
    "TokenEndpoint": "https://keycloak.intellifin.local/realms/IntelliFin/protocol/openid-connect/token",
    "ClientId": "admin-service",
    "ClientSecret": "",
    "Scope": "",
    "FailOpen": false,
    "TokenRefreshBufferSeconds": 60
  },
  "IncidentResponse": {
    "AlertmanagerBaseUrl": "http://kube-prometheus-stack-alertmanager.monitoring.svc.cluster.local:9093",
    "IncidentWorkflowProcessId": "incident-response",
    "PostmortemWorkflowProcessId": "incident-postmortem",
    "DefaultSilenceDurationMinutes": 120,
    "PlaybookBaseUrl": "https://admin.intellifin.local/playbooks"
  },
  "ConfigurationManagement": {
    "GitRepository": "https://github.com/intellifin/intellifin-k8s-config.git",
    "GitBranch": "main",
    "LocalRepoPath": "/tmp/intellifin-k8s-config",
    "InCluster": true,
    "KubeConfigPath": ""
  },
  "Vault": {
    "Address": "http://vault.vault.svc.cluster.local:8200",
    "Token": "",
    "Namespace": "",
    "Enabled": true,
    "SecretsEnginePath": "database",
    "DefaultSecretCacheSeconds": 300,
    "SecretPaths": {
      "AdminDatabaseRole": "admin-service",
      "FinancialDatabaseRole": "financial-service",
      "IdentityDatabaseRole": "identity-service",
      "RabbitMq": {
        "MountPoint": "kv",
        "Path": "messaging/audit"
      },
      "Minio": {
        "MountPoint": "kv",
        "Path": "object-storage/admin-service"
      }
    }
  },
  "ArgoCD": {
    "Url": "https://argocd.intellifin.local",
    "Token": "",
    "TimeoutSeconds": 60,
    "DefaultProject": "intellifin-production"
  },
  "Sbom": {
    "BucketName": "intellifin-sboms",
    "Prefix": "",
    "DownloadTimeoutSeconds": 60
  },
  "Bastion": {
    "SessionBucketName": "bastion-sessions",
    "SessionPrefix": "",
    "BastionHostname": "bastion.intellifin.local",
    "AccessWorkflowProcessId": "bastion-access-request",
    "EmergencyWorkflowProcessId": "bastion-emergency-access",
    "MaxAccessDurationHours": 8,
    "MinAccessDurationHours": 1,
    "DefaultAccessDurationHours": 2,
    "SessionRetentionDays": 1095,
    "EmergencyAccessHours": 1
  }
}
