{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft": "Information",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "ConnectionStrings": {
    "Default": "Server=(localdb)\\mssqllocaldb;Database=IntelliFin_AdminService;Trusted_Connection=True;MultipleActiveResultSets=True"
  },
  "Keycloak": {
    "BaseUrl": "https://keycloak.intellifin.local/",
    "Realm": "IntelliFin",
    "ClientId": "admin-service-local",
    "ClientSecret": "development-secret"
  },
  "AuditArchive": {
    "BucketName": "audit-logs",
    "AccessLogBucketName": "audit-access-logs",
    "RetentionDays": 3654,
    "ExportHourUtc": 0,
    "ExportMinuteUtc": 0,
    "CleanupRetentionDays": 30,
    "MetadataRetentionGraceDays": 1,
    "ReplicationCheckIntervalMinutes": 15
  },
  "Minio": {
    "Endpoint": "localhost:9000",
    "UseSsl": false,
    "AccessKey": "minioadmin",
    "SecretKey": "minioadmin",
    "Region": "",
    "PresignedUrlExpirySeconds": 900
  },
  "AuditChain": {
    "VerificationIntervalHours": 6
  },
  "Elevation": {
    "MaxDurationMinutes": 480,
    "MinJustificationLength": 20,
    "ApprovalTimeoutHours": 24,
    "ExpirationCheckIntervalMinutes": 5,
    "NotifyUserOnExpiration": true
  },
  "Camunda": {
    "BaseUrl": "https://camunda.dev.intellifin.local/api/",
    "ClientId": "admin-service-local",
    "ClientSecret": "development-secret"
  },
  "IncidentResponse": {
    "AlertmanagerBaseUrl": "http://localhost:9093",
    "IncidentWorkflowProcessId": "incident-response",
    "PostmortemWorkflowProcessId": "incident-postmortem",
    "DefaultSilenceDurationMinutes": 120,
    "PlaybookBaseUrl": "https://admin.dev.intellifin.local/playbooks"
  },
  "ArgoCD": {
    "Url": "https://argocd.dev.intellifin.local",
    "Token": "${ARGOCD_DEV_TOKEN}",
    "TimeoutSeconds": 60,
    "DefaultProject": "intellifin-dev"
  },
  "Sbom": {
    "BucketName": "intellifin-sboms",
    "Prefix": "dev",
    "DownloadTimeoutSeconds": 60
  },
  "Bastion": {
    "SessionBucketName": "bastion-sessions",
    "SessionPrefix": "dev",
    "BastionHostname": "bastion.dev.intellifin.local",
    "AccessWorkflowProcessId": "bastion-access-request",
    "EmergencyWorkflowProcessId": "bastion-emergency-access",
    "MaxAccessDurationHours": 8,
    "MinAccessDurationHours": 1,
    "DefaultAccessDurationHours": 2,
    "SessionRetentionDays": 730,
    "EmergencyAccessHours": 1
  }
}
