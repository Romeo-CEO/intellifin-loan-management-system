{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "Microsoft.EntityFrameworkCore": "Warning",
        "System": "Warning"
      }
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "LmsDatabase": "Host=localhost;Port=5432;Database=intellifin_lms;Username=postgres;Password=postgres",
    "Redis": "localhost:6379"
  },
  "RabbitMQ": {
    "Host": "localhost",
    "Port": 5672,
    "VirtualHost": "/",
    "Username": "guest",
    "Password": "guest"
  },
  "Vault": {
    "Address": "http://localhost:8200",
    "Token": "",
    "RulesPath": "secret/intellifin/credit-assessment/config",
    "RefreshIntervalMinutes": 5
  },
  "ExternalServices": {
    "ClientManagement": {
      "BaseUrl": "http://localhost:5001",
      "TimeoutSeconds": 30
    },
    "AdminService": {
      "BaseUrl": "http://localhost:5002",
      "TimeoutSeconds": 10
    },
    "TransUnion": {
      "BaseUrl": "https://api.transunion.co.zm",
      "ApiKey": "",
      "TimeoutSeconds": 60,
      "EnableSmartRouting": true,
      "CacheTtlDays": 90
    },
    "PMEC": {
      "BaseUrl": "https://pmec-api.gov.zm",
      "TimeoutSeconds": 45,
      "CacheTtlHours": 24
    }
  },
  "Camunda": {
    "ZeebeGatewayAddress": "localhost:26500",
    "WorkerName": "credit-assessment-worker",
    "MaxConcurrency": 5,
    "TimeoutSeconds": 30
  },
  "CreditAssessment": {
    "CacheEnabled": true,
    "AssessmentCacheTtlHours": 24,
    "MaxConcurrentAssessments": 100,
    "EnableExplainability": true
  }
}
