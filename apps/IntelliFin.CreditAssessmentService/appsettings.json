{
  "ServiceName": "IntelliFin.CreditAssessmentService",
  "ServiceVersion": "1.0.0",
  "Environment": "Production",
  "AllowedHosts": "*",
  "Cors": {
    "AllowedOrigins": []
  },
  "Authentication": {
    "Authority": "https://identity.intellifin.internal/auth/realms/intellifin",
    "Audience": "credit-assessment-service"
  },
  "ConnectionStrings": {
    "CreditAssessmentDatabase": "Host=postgres;Port=5432;Database=intellifin_credit_assessment;Username=credit_assessment_user;Password=CHANGE_ME"
  },
  "Redis": {
    "Configuration": "redis:6379",
    "InstanceName": "credit-assessment"
  },
  "RabbitMq": {
    "Host": "rabbitmq",
    "Port": 5672,
    "VirtualHost": "/",
    "Username": "guest",
    "Password": "guest"
  },
  "VaultRules": {
    "Address": "https://vault.intellifin.internal",
    "RulePath": "intellifin/credit-assessment/rules",
    "ThresholdPath": "intellifin/credit-assessment/thresholds",
    "TransUnionSecretPath": "intellifin/credit-assessment/transunion",
    "RefreshIntervalMinutes": 5,
    "Enabled": true
  },
  "TransUnion": {
    "BaseUrl": "https://api.transunionafrica.com",
    "Timeout": "00:00:20",
    "RetryCount": 3,
    "FallbackCredentials": {
      "ClientId": "sandbox-client",
      "ClientSecret": "sandbox-secret",
      "BaseUrl": "https://sandbox.transunion.com",
      "Version": "v0"
    }
  },
  "Pmec": {
    "BaseUrl": "https://api.pmec.gov.zm",
    "Timeout": "00:00:20",
    "RetryCount": 3,
    "ApiKey": "CHANGE_ME"
  },
  "ClientManagement": {
    "BaseUrl": "https://client-management.intellifin.internal",
    "Timeout": "00:00:15",
    "RetryCount": 3
  },
  "FeatureFlags": {
    "UseStandaloneService": true,
    "EnableExplainability": true,
    "EnableManualOverrideWorkflow": true,
    "EnableEventPublishing": true
  },
  "Zeebe": {
    "GatewayAddress": "zeebe:26500",
    "ClientId": "credit-assessment-worker",
    "ClientSecret": "CHANGE_ME",
    "Audience": "zeebe-api",
    "AuthorizationServerUrl": "https://camunda.identity/token"
  },
  "AssessmentRules": {
    "Default": {
      "Version": "bootstrap",
      "Rules": [
        {
          "Key": "debt_to_income",
          "Expression": "context.DebtToIncomeRatio <= thresholds.DebtToIncomeThreshold",
          "Weight": 0.4,
          "Category": "Affordability"
        },
        {
          "Key": "credit_score",
          "Expression": "context.BureauScore",
          "Weight": 0.35,
          "Category": "CreditHistory"
        },
        {
          "Key": "kyc_completeness",
          "Expression": "context.RiskFlags",
          "Weight": 0.25,
          "Category": "Compliance"
        }
      ]
    },
    "Thresholds": {
      "Version": "bootstrap",
      "DebtToIncomeThreshold": 0.4,
      "GradeThresholds": {
        "A": 850,
        "B": 750,
        "C": 650,
        "D": 550,
        "E": 450,
        "F": 0
      },
      "DecisionMatrix": {
        "A": "Approved",
        "B": "Approved",
        "C": "ConditionalApproval",
        "D": "ManualReview",
        "E": "ManualReview",
        "F": "Rejected"
      }
    }
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "System": "Warning"
      }
    },
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId", "WithProcessId" ],
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "formatter": "Serilog.Formatting.Compact.RenderedCompactJsonFormatter, Serilog.Formatting.Compact"
        }
      }
    ]
  },
  "OpenTelemetry": {
    "OtlpEndpoint": "http://otel-collector:4317",
    "Logs": {
      "OtlpEndpoint": "http://otel-collector:4317",
      "Headers": {
        "x-otlp-api-key": "CHANGE_ME"
      },
      "SensitiveKeys": [ "password", "token", "secret" ],
      "RedactionPatterns": []
    }
  }
}
