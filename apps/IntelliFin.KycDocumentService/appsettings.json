{
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=IntelliFin_LoanManagement;Trusted_Connection=true;MultipleActiveResultSets=true"
  },
  "Jwt": {
    "Authority": "https://localhost:7001",
    "Audience": "kyc-document-api"
  },
  "MinIO": {
    "Endpoint": "localhost:9000",
    "AccessKey": "minioadmin",
    "SecretKey": "minioadmin",
    "UseSSL": false,
    "BucketName": "kyc-documents"
  },
  "AzureOcr": {
    "Endpoint": "https://your-form-recognizer.cognitiveservices.azure.com/",
    "ApiKey": "your-api-key-here",
    "UseSystemIdentity": false,
    "TimeoutSeconds": 120,
    "EnableQualityAssessment": true
  },
  "DocumentValidation": {
    "MaxFileSizeBytes": 10485760,
    "MinImageWidth": 300,
    "MinImageHeight": 300,
    "RequiredConfidenceScore": 0.7,
    "EnableOCR": true,
    "UseAzureOcr": true,
    "SupportedFormats": [
      "image/jpeg",
      "image/png",
      "image/tiff",
      "application/pdf"
    ]
  },
  "Compliance": {
    "RetentionPeriodYears": 10,
    "ArchiveAfterMonths": 24,
    "RequireManualReviewThreshold": 0.7,
    "AutoApproveThreshold": 0.9,
    "MaxProcessingAttempts": 3
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "IntelliFin.KycDocumentService": "Information"
    }
  },
  "AllowedHosts": "*",
  "ServiceName": "IntelliFin.KycDocumentService",
  "ServiceVersion": "1.0.0",
  "Environment": "Development",
  "OpenTelemetry": {
    "OtlpEndpoint": "http://otel-collector:4317"
  }
}
