{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Information"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.EntityFrameworkCore": "Information",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] [{CorrelationId}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": ["FromLogContext", "WithMachineName", "WithEnvironmentName"]
  },
  "AllowedHosts": "*",
  "ServiceName": "IntelliFin.ClientManagement",
  "ServiceVersion": "1.0.0",
  "Environment": "Production",
  "OpenTelemetry": {
    "OtlpEndpoint": "http://otel-collector:4317"
  },
  "ConnectionStrings": {
    "ClientManagement": ""
  },
  "Vault": {
    "Endpoint": "http://vault:8200",
    "Token": "",
    "ConnectionStringPath": "intellifin/db-passwords/client-svc"
  },
  "Authentication": {
    "Authority": "",
    "Issuer": "intellifin-identity",
    "Audience": "intellifin.client-management",
    "SecretKey": "",
    "RequireHttpsMetadata": true,
    "ValidateIssuer": true,
    "ValidateAudience": true,
    "ValidateLifetime": true
  },
  "AuditService": {
    "BaseAddress": "http://admin-service:5000",
    "HttpTimeout": "00:00:30"
  },
  "KycDocumentService": {
    "BaseUrl": "http://kyc-document-service:5000",
    "Timeout": "00:01:00",
    "MaxFileSizeBytes": 10485760,
    "AllowedContentTypes": ["application/pdf", "image/jpeg", "image/png"]
  },
  "DocumentRetention": {
    "RetentionYears": 7
  }
}
