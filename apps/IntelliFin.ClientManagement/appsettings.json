{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Information"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.EntityFrameworkCore": "Information",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] [{CorrelationId}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": ["FromLogContext", "WithMachineName", "WithEnvironmentName"]
  },
  "AllowedHosts": "*",
  "ServiceName": "IntelliFin.ClientManagement",
  "ServiceVersion": "1.0.0",
  "Environment": "Production",
  "OpenTelemetry": {
    "OtlpEndpoint": "http://otel-collector:4317"
  },
  "ConnectionStrings": {
    "ClientManagement": ""
  },
  "Vault": {
    "Endpoint": "http://vault:8200",
    "Token": "",
    "ConnectionStringPath": "intellifin/db-passwords/client-svc"
  },
  "Authentication": {
    "Authority": "",
    "Issuer": "intellifin-identity",
    "Audience": "intellifin.client-management",
    "SecretKey": "",
    "RequireHttpsMetadata": true,
    "ValidateIssuer": true,
    "ValidateAudience": true,
    "ValidateLifetime": true
  },
  "AuditService": {
    "BaseAddress": "http://admin-service:5000",
    "HttpTimeout": "00:00:30"
  },
  "KycDocumentService": {
    "BaseUrl": "http://kyc-document-service:5000",
    "Timeout": "00:01:00",
    "MaxFileSizeBytes": 10485760,
    "AllowedContentTypes": ["application/pdf", "image/jpeg", "image/png"]
  },
  "DocumentRetention": {
    "RetentionYears": 7
  },
  "CommunicationsService": {
    "BaseUrl": "http://communications-service:5000",
    "Timeout": "00:00:30"
  },
  "Consent": {
    "DefaultOperationalConsent": false,
    "DefaultMarketingConsent": false,
    "RegulatoryConsentAlwaysEnabled": true
  },
  "Camunda": {
    "GatewayAddress": "http://camunda-zeebe-gateway:26500",
    "WorkerName": "IntelliFin.ClientManagement",
    "MaxJobsToActivate": 32,
    "PollingIntervalSeconds": 5,
    "RequestTimeoutSeconds": 30,
    "Enabled": true,
    "MaxRetries": 3,
    "Topics": [
      "client.health.check",
      "client.kyc.verify-documents",
      "client.kyc.aml-screening",
      "client.kyc.risk-assessment",
      "client.edd.generate-report"
    ]
  },
  "VaultRiskScoring": {
    "Enabled": true,
    "Address": "http://vault:8200",
    "AuthMethod": "JWT",
    "RoleName": "client-management-risk",
    "RiskScoringConfigPath": "intellifin/data/client-management/risk-scoring-rules",
    "MountPoint": "intellifin",
    "PollingIntervalSeconds": 60,
    "TimeoutSeconds": 30,
    "UseFallbackOnError": true,
    "MaxRetries": 3
  }
}
