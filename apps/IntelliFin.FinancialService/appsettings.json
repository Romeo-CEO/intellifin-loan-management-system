{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Hangfire": "Information"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost,31433;Database=IntelliFin;User Id=sa;Password=YourStrong@Passw0rd;TrustServerCertificate=true;",
    "JasperReportsServer": "http://localhost:8080/jasperserver"
  },
  "RabbitMQ": {
    "Host": "localhost",
    "Port": 35672,
    "Username": "guest",
    "Password": "guest"
  },
  "PMEC": {
    "BaseUrl": "https://pmec.gov.zm/api",
    "ApiKey": "your-pmec-api-key",
    "Timeout": 30,
    "MaxRetries": 4,
    "RetryDelay": 2000
  },
  "Tingg": {
    "BaseUrl": "https://api.tingg.africa",
    "MerchantId": "your-merchant-id",
    "ApiKey": "your-tingg-api-key",
    "MaxRetries": 5,
    "RetryDelay": 1500,
    "Timeout": 10000
  },
  "PaymentRetry": {
    "MaxRetries": 3,
    "BaseDelay": 1000,
    "MaxDelay": 30000
  },
  "Reconciliation": {
    "DailyTime": "06:00",
    "AutoReconcile": true,
    "MaxDaysUnreconciled": 7
  },
  "Monitoring": {
    "FailureThreshold": 5,
    "SlowResponseThreshold": 3,
    "SlowTransactionThreshold": 5.0,
    "EnableAlerts": true,
    "AlertRetentionDays": 30
  },
  "JasperReports": {
    "Username": "jasperadmin",
    "Password": "jasperadmin",
    "Organization": "organization_1",
    "DefaultFormat": "pdf"
  },
  "BoZ": {
    "MinimumCapitalAdequacyRatio": 10.0,
    "MaxNPLRatio": 5.0,
    "ReportingFrequency": "Monthly"
  },
  "ServiceName": "IntelliFin.FinancialService",
  "ServiceVersion": "1.0.0",
  "Environment": "Development",
  "OpenTelemetry": {
    "OtlpEndpoint": "http://otel-collector:4317",
    "Logs": {
      "OtlpEndpoint": "http://otel-collector:4317",
      "Headers": {
        "X-Scope-OrgID": ""
      },
      "SensitiveKeys": [
        "nrc",
        "nrcNumber",
        "nationalRegistration",
        "phone",
        "phoneNumber"
      ],
      "RedactionPatterns": []
    }
  },
  "AuditService": {
    "BaseAddress": "https://adminservice.local",
    "HttpTimeout": "00:00:30"
  }
}
