{
  "Cors": {
    "AllowedOrigins": [
      "http://localhost:3000"
    ]
  },
  "Jwt": {
    "Issuer": "IntelliFin.Identity",
    "Audience": "intellifin-api",
    "SigningKey": "dev-super-secret-signing-key-change-me-please-1234567890",
    "RequireHttps": false
  },
  "ReverseProxy": {
    "Routes": {
      "clients": {
        "ClusterId": "clients",
        "Match": { "Path": "/api/clients/{**catch-all}" },
        "Transforms": [ { "PathRemovePrefix": "/api/clients" } ]
      },
      "origination": {
        "ClusterId": "origination",
        "Match": { "Path": "/api/origination/{**catch-all}" },
        "Transforms": [ { "PathRemovePrefix": "/api/origination" } ]
      },
      "collections": {
        "ClusterId": "collections",
        "Match": { "Path": "/api/collections/{**catch-all}" },
        "Transforms": [ { "PathRemovePrefix": "/api/collections" } ]
      },
      "communications": {
        "ClusterId": "communications",
        "Match": { "Path": "/api/communications/{**catch-all}" },
        "Transforms": [ { "PathRemovePrefix": "/api/communications" } ]
      },
      "gl": {
        "ClusterId": "gl",
        "Match": { "Path": "/api/gl/{**catch-all}" },
        "Transforms": [ { "PathRemovePrefix": "/api/gl" } ]
      },
      "sync": {
        "ClusterId": "sync",
        "Match": { "Path": "/api/sync/{**catch-all}" },
        "Transforms": [ { "PathRemovePrefix": "/api/sync" } ]
      }
    },
    "Clusters": {
      "clients": { "Destinations": { "d1": { "Address": "http://localhost:5224" } } },
      "origination": { "Destinations": { "d1": { "Address": "http://localhost:5193" } } },
      "collections": { "Destinations": { "d1": { "Address": "http://localhost:5051" } } },
      "communications": { "Destinations": { "d1": { "Address": "http://localhost:5218" } } },
      "gl": { "Destinations": { "d1": { "Address": "http://localhost:5201" } } },
      "sync": { "Destinations": { "d1": { "Address": "http://localhost:5214" } } }
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}
